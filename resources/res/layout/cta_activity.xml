<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:PtrHeader="http://schemas.android.com/apk/PtrHeader" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customPullDownRefreshLL="http://schemas.android.com/apk/res/com.xiaomi.smarthome" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:background="#90000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/empty" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/footer"/>
    <RelativeLayout android:orientation="vertical" android:id="@+id/footer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_alignParentBottom="true">
        <LinearLayout android:orientation="horizontal" android:id="@+id/buttonPanel" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <Button android:textSize="@dimen/font_size_12sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/cancel" android:background="@drawable/cta_btn_left" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/disclaim_cancel" android:singleLine="true" android:layout_weight="1"/>
            <Button android:textSize="@dimen/font_size_12sp" android:textColor="#00bc9c" android:gravity="center" android:id="@+id/ok" android:background="@drawable/cta_btn_right" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/disclaim_confirm" android:singleLine="true" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="@drawable/cta_background_up_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/buttonPanel">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="66dp" android:layout_marginStart="24dp" android:layout_marginEnd="24dp">
                <TextView android:textSize="15sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/disclaim_title" android:layout_centerInParent="true"/>
            </RelativeLayout>
            <TextView android:textSize="14sp" android:textColor="#ff666666" android:id="@+id/disclaim_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="14dp" android:adjustViewBounds="true" android:maxHeight="350dp" android:lineSpacingExtra="4dp" android:layout_marginStart="24dp" android:layout_marginEnd="24dp"/>
            <TextView android:textSize="14sp" android:textColor="#ff666666" android:id="@+id/disclaim_content1" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="14dp" android:maxHeight="350dp" android:text="@string/disclaim_join_user_exp_plan4" android:lineSpacingExtra="4dp" android:layout_marginStart="24dp" android:layout_marginEnd="24dp"/>
            <RelativeLayout android:id="@+id/remember_container2" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="21dp" android:layout_marginBottom="14dp" android:layout_marginStart="30dp">
                <ImageView android:id="@+id/remember2" android:background="@drawable/disclaim_remeber" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
                <TextView android:textSize="14sp" android:textColor="#ff999999" android:id="@+id/join_usr_exp_plan_tv2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="9dp" android:layout_marginRight="24dp" android:text="@string/disclaim_join_user_exp_plan1" android:layout_toRightOf="@+id/remember2" android:layout_centerVertical="true" android:layout_marginStart="5dp" android:layout_toEndOf="@+id/remember2"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/remember_container3" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="21dp" android:layout_marginBottom="14dp" android:layout_marginStart="30dp">
                <ImageView android:id="@+id/remember3" android:background="@drawable/disclaim_remeber" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
                <TextView android:textSize="14sp" android:textColor="#ff999999" android:id="@+id/join_usr_exp_plan_tv3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="9dp" android:layout_marginRight="24dp" android:text="@string/disclaim_join_user_exp_plan2" android:layout_toRightOf="@+id/remember3" android:layout_centerVertical="true" android:layout_marginStart="5dp" android:layout_toEndOf="@+id/remember3"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/remember_container" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="21dp" android:layout_marginBottom="14dp" android:layout_marginStart="30dp">
                <ImageView android:id="@+id/remember" android:background="@drawable/disclaim_remeber" android:padding="@dimen/size_5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true"/>
                <TextView android:textSize="14sp" android:textColor="#ff999999" android:id="@+id/join_usr_exp_plan_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="9dp" android:layout_marginRight="24dp" android:text="@string/disclaim_join_user_exp_plan" android:layout_toRightOf="@+id/remember" android:layout_centerVertical="true" android:layout_marginStart="5dp" android:layout_toEndOf="@+id/remember"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
