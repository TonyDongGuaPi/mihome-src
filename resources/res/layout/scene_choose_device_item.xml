<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:PtrHeader="http://schemas.android.com/apk/PtrHeader" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customPullDownRefreshLL="http://schemas.android.com/apk/res/com.xiaomi.smarthome" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/scene_chooese_device_root" android:background="@drawable/choose_device_list_item_last_position_bg" android:layout_width="match_parent" android:layout_height="@dimen/std_list_item_height_single_line">
    <RelativeLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/content_icon" android:layout_width="50dp" android:layout_height="70dp" android:scaleType="fitCenter" android:layout_centerVertical="true"/>
        <FrameLayout android:id="@+id/right_icon_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/std_list_content_margin_right" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/std_list_content_margin_right" android:layout_alignParentEnd="true">
            <ImageView android:id="@+id/expand_hint" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/std_list_main_next"/>
            <com.xiaomi.smarthome.library.common.widget.SwitchButton android:id="@+id/item_enable" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </FrameLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/content_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="8dp" android:layout_toLeftOf="@+id/right_icon_container" android:layout_toRightOf="@+id/content_icon" android:layout_centerVertical="true" android:layout_marginStart="10dp" android:layout_marginEnd="8dp" android:layout_toStartOf="@+id/right_icon_container" android:layout_toEndOf="@+id/content_icon">
            <TextView android:textSize="@dimen/std_list_font_size_title" android:textColor="@color/std_list_title" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/content" android:duplicateParentState="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1"/>
            <TextView android:textSize="@dimen/font_size_5" android:textColor="@drawable/scene_setting_text_hint" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/content_description" android:duplicateParentState="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:singleLine="true" android:layout_weight="1"/>
        </LinearLayout>
        <View android:id="@+id/divide_line" android:background="@color/std_list_divider_line" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</FrameLayout>
