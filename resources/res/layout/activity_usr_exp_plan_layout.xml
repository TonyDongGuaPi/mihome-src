<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/root" android:background="@color/std_main_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/title_bar" android:background="@drawable/common_title_bar_bg" android:layout_width="match_parent" android:layout_height="@dimen/std_titlebar_height">
        <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/module_a_3_return_btn" android:paddingLeft="@dimen/std_titlebar_margin_left_right" android:paddingRight="@dimen/std_titlebar_margin_left_right" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/common_title_bar_return" android:scaleType="center" android:contentDescription="@string/action_back"/>
        <TextView android:textSize="@dimen/std_title_bar_text_size" android:textColor="@color/std_titlebar_main_device_title" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/module_a_3_return_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/std_titlebar_return_area_size" android:layout_marginRight="@dimen/std_titlebar_return_area_size" android:maxLines="1"/>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/webview_container" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
        <WebView android:id="@+id/usr_exp_plan_webview" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <ScrollView android:id="@+id/usr_exp_plan_scrollview" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:background="@color/lite_scene_bg_normal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textColor="@color/black_75_transparent" android:id="@+id/usr_exp_plan_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:includeFontPadding="false"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
