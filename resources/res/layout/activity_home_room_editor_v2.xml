<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/list_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:visibility="visible" layout="@layout/title_bar_choose_device"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/et_container" android:background="@drawable/input_rect" android:layout_width="match_parent" android:layout_height="@dimen/listitem_6_height" android:layout_marginTop="26dp">
        <TextView android:textSize="@dimen/std_list_font_size_title" android:textColor="@color/std_list_title" android:gravity="center_vertical" android:id="@+id/room_name_tag" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/std_list_content_margin_left" android:text="@string/input_tag_name" android:maxLines="1"/>
        <TextView android:textSize="@dimen/font_size_14sp" android:textColor="@color/class_D" android:ellipsize="end" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/input_tag" android:background="@null" android:paddingLeft="15dp" android:paddingRight="1dp" android:layout_width="0dp" android:layout_height="match_parent" android:hint="@string/input_tag_name_hint" android:singleLine="true" android:layout_weight="1" android:textCursorDrawable="@null" android:paddingStart="15dp" android:paddingEnd="1dp"/>
        <ImageView android:id="@+id/arrow_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="@dimen/std_list_content_margin_right" android:src="@drawable/um_arrow" android:importantForAccessibility="no"/>
    </LinearLayout>
    <RelativeLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/change_home_icon_container" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/listitem_6_height">
        <ImageView android:id="@+id/arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:layout_marginRight="@dimen/std_list_content_margin_right" android:src="@drawable/um_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:importantForAccessibility="no" android:layout_marginEnd="@dimen/std_list_content_margin_right" android:layout_alignParentEnd="true"/>
        <com.facebook.drawee.view.SimpleDraweeView android:gravity="center" android:id="@+id/icon" android:background="@drawable/shape_bg_room_icon" android:layout_width="38dp" android:layout_height="38dp" android:layout_marginLeft="13dp" android:layout_toLeftOf="@+id/arrow" android:layout_centerVertical="true" android:layout_marginStart="13dp" app:placeholderImage="@drawable/default_bg_normal"/>
        <TextView android:textSize="@dimen/std_list_font_size_title" android:textColor="@color/std_list_title" android:gravity="center_vertical" android:id="@+id/check_update_new_title" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="@dimen/std_list_content_margin_left" android:text="@string/room_icon" android:layout_toLeftOf="@+id/icon" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.xiaomi.smarthome.library.common.widget.ListItemView android:id="@+id/rl_count" android:background="@drawable/std_list_item_space_bg" android:layout_width="match_parent" android:layout_height="@dimen/std_list_space_common_height_single_line">
            <View android:background="@color/std_list_divider_line" android:layout_width="match_parent" android:layout_height="1px"/>
            <TextView android:textSize="@dimen/std_list_font_size_group" android:textColor="@color/std_list_group" android:id="@+id/count_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/std_list_content_margin_left" android:layout_marginTop="@dimen/std_list_space_margin_top" android:layout_marginStart="@dimen/std_list_content_margin_left"/>
        </com.xiaomi.smarthome.library.common.widget.ListItemView>
        <android.support.design.widget.TabLayout android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/tab_layout" android:layout_width="match_parent" android:layout_height="42dp" style="@style/TabLayoutStyle"/>
        <com.xiaomi.smarthome.library.common.widget.ViewPagerSystem android:id="@+id/view_pager" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
