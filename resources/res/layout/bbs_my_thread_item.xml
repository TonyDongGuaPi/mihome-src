<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
    <LinearLayout android:orientation="vertical" android:id="@+id/ll_thread" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/layoutLocal">
        <RelativeLayout android:id="@+id/my_thread_item_container" android:background="@drawable/home_banner_white_pressed_selector" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="100dp">
            <ImageView android:id="@+id/my_thread_item_icon" android:layout_width="84dp" android:layout_height="84dp" android:layout_marginTop="17dp" android:layout_marginBottom="10dp" android:scaleType="centerCrop" android:layout_marginEnd="16dp" android:layout_alignParentEnd="true"/>
            <com.mi.global.bbs.view.Editor.FontTextView android:textSize="16sp" android:textColor="@color/black" android:ellipsize="end" android:id="@+id/my_thread_item_title" android:paddingBottom="14dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="17dp" android:minHeight="60dp" android:maxLines="2" android:layout_alignParentTop="true" android:textDirection="locale" android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_toStartOf="@+id/my_thread_item_icon" android:layout_alignParentStart="true"/>
            <com.mi.global.bbs.view.Editor.FontTextView android:textSize="13sp" android:textColor="#999999" android:id="@+id/my_thread_item_author" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_below="@+id/my_thread_item_title" android:textDirection="locale" android:layout_marginStart="16dp" android:layout_alignParentStart="true"/>
        </RelativeLayout>
        <TextView android:id="@+id/view_line" android:background="@color/user_center_divider_color" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="16dp">
            <com.mi.global.bbs.view.Editor.FontTextView android:textSize="13sp" android:textColor="#999999" android:id="@+id/my_thread_item_views" android:paddingTop="11dp" android:paddingBottom="11dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawablePadding="6dp" android:drawableStart="@drawable/bbs_f_view_icon" android:textDirection="locale"/>
            <com.mi.global.bbs.view.Editor.FontTextView android:textSize="13sp" android:textColor="#999999" android:id="@+id/my_thread_item_comments" android:paddingTop="11dp" android:paddingBottom="11dp" android:layout_width="0dp" android:layout_height="wrap_content" android:drawablePadding="6dp" android:layout_weight="1" android:drawableStart="@drawable/bbs_f_comment_icon" android:textDirection="locale" android:layout_marginStart="11dp"/>
            <com.mi.global.bbs.view.Editor.FontTextView android:layout_gravity="center_vertical" android:id="@+id/my_thread_item_share" android:clickable="true" android:layout_width="wrap_content" android:layout_height="match_parent" android:drawableEnd="@drawable/bbs_f_share_icon" android:textDirection="locale" android:paddingStart="16dp" android:paddingEnd="16dp"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:id="@+id/rl_thread_delete" android:background="@android:color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignBottom="@+id/ll_thread" android:layout_alignParentTop="true" android:alpha="0.7">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="116dp" android:layout_marginBottom="40dp" android:src="@drawable/bbs_thread_delete" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
