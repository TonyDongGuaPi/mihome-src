<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:PtrHeader="http://schemas.android.com/apk/PtrHeader" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customPullDownRefreshLL="http://schemas.android.com/apk/res/com.xiaomi.smarthome" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/lock_irv2_controller_round_board" android:layout_width="154dp" android:layout_height="154dp">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageButton android:id="@+id/irv2_round_button_up" android:background="@android:color/transparent" android:layout_width="60dp" android:layout_height="40dp" android:layout_marginTop="2dp" android:src="@drawable/lock_irv2_controller_round_up"/>
        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageButton android:id="@+id/irv2_round_button_left" android:background="@android:color/transparent" android:layout_width="40dp" android:layout_height="60dp" android:layout_marginLeft="2dp" android:src="@drawable/lock_irv2_controller_round_left" android:layout_marginStart="2dp"/>
            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageButton android:id="@+id/irv2_round_button_ok" android:background="@android:color/transparent" android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/lock_irv2_controller_round_center"/>
                <TextView android:textSize="@dimen/font_size_13sp" android:textColor="@color/irv2_text_color_gray" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/irv2_controller_ok_text"/>
            </FrameLayout>
            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
            <ImageButton android:id="@+id/irv2_round_button_right" android:background="@android:color/transparent" android:layout_width="40dp" android:layout_height="60dp" android:layout_marginRight="2dp" android:src="@drawable/lock_irv2_controller_round_right" android:layout_marginEnd="2dp"/>
        </LinearLayout>
        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
        <ImageButton android:id="@+id/irv2_round_button_down" android:background="@android:color/transparent" android:layout_width="60dp" android:layout_height="40dp" android:layout_marginBottom="2dp" android:src="@drawable/lock_irv2_controller_round_down"/>
    </LinearLayout>
</FrameLayout>
