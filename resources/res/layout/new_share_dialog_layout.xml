<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:PtrHeader="http://schemas.android.com/apk/PtrHeader" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customPullDownRefreshLL="http://schemas.android.com/apk/res/com.xiaomi.smarthome" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/share_root" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/layoutLocal">
    <LinearLayout android:orientation="vertical" android:id="@+id/share_layout" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.mi.global.bbs.view.Editor.FontTextView android:textSize="16sp" android:textColor="@color/black" android:id="@+id/share_to_title" android:paddingTop="16dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/share_to" android:textDirection="locale" android:paddingStart="13dp"/>
        <include layout="@layout/new_share_dialog_top"/>
        <android.support.v7.widget.RecyclerView android:orientation="horizontal" android:id="@+id/share_list_view" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="9dp"/>
        <View android:background="@color/common_bg_color" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="19dp">
            <LinearLayout android:orientation="vertical" android:id="@+id/save_ly" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingEnd="23dp">
                <ImageView android:background="@drawable/share_save" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp"/>
                <com.mi.global.bbs.view.Editor.FontTextView android:textSize="13sp" android:textColor="#999999" android:layout_gravity="center_horizontal" android:paddingBottom="14dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/save" android:textDirection="locale"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/copy_link" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingEnd="23dp">
                <ImageView android:background="@drawable/share_copylink" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp"/>
                <com.mi.global.bbs.view.Editor.FontTextView android:textSize="13sp" android:textColor="#999999" android:layout_gravity="center_horizontal" android:paddingTop="3dp" android:paddingBottom="14dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/share_copy_link" android:textDirection="locale"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/sms_ly" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingEnd="23dp">
                <ImageView android:background="@drawable/share_sms" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp"/>
                <com.mi.global.bbs.view.Editor.FontTextView android:textSize="13sp" android:textColor="#999999" android:layout_gravity="center_horizontal" android:paddingTop="3dp" android:paddingBottom="14dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/share_sms" android:textDirection="locale"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/email_ly" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingEnd="23dp">
                <ImageView android:background="@drawable/share_email" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp"/>
                <com.mi.global.bbs.view.Editor.FontTextView android:textSize="13sp" android:textColor="#999999" android:layout_gravity="center_horizontal" android:paddingTop="3dp" android:paddingBottom="14dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/share_email" android:textDirection="locale"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/report_ly" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingEnd="23dp">
                <ImageView android:background="@drawable/share_report" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="14dp"/>
                <com.mi.global.bbs.view.Editor.FontTextView android:textSize="13sp" android:textColor="#999999" android:layout_gravity="center_horizontal" android:paddingTop="3dp" android:paddingBottom="14dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/share_Report" android:lines="1" android:textDirection="locale"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
