        <Button android:textSize="@dimen/std_dialog_button_font_size" android:textColor="@color/std_dialog_button_normal" android:gravity="center" android:id="@+id/btn_cancel" android:background="@drawable/dialog_btn_left_selector" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/camera_cancel" android:singleLine="true" android:layout_weight="1"/>
