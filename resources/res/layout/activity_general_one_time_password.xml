            <TextView android:enabled="false" android:textSize="34sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/password_text_6" android:background="@drawable/password_item_shape" android:layout_width="48dp" android:layout_height="48dp" android:layout_marginLeft="6dp"/>
