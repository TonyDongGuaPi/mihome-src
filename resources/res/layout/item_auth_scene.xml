<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:PtrHeader="http://schemas.android.com/apk/PtrHeader" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customPullDownRefreshLL="http://schemas.android.com/apk/res/com.xiaomi.smarthome" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/sort_action_item" android:background="@drawable/common_list_white_backgroud_selector" android:layout_width="match_parent" android:layout_height="100dp">
    <TextView android:textSize="15sp" android:textColor="@color/class_V" android:ellipsize="end" android:id="@+id/tv_scene_name" android:paddingTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxWidth="@dimen/my_scene_fragment_name_tv_max_width" android:maxLines="1" android:paddingStart="@dimen/std_list_padding_left" android:paddingEnd="@dimen/scene_list_item_padding_right"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="46dp" android:layout_marginTop="8dp" android:layout_below="@+id/tv_scene_name" android:layout_alignParentLeft="true" android:paddingStart="@dimen/std_list_padding_left" android:paddingEnd="@dimen/std_list_padding_left" android:layout_alignParentStart="true">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <RelativeLayout android:layout_gravity="center_vertical" android:layout_width="46dp" android:layout_height="46dp">
                <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/icon_condition" android:layout_width="46dp" android:layout_height="46dp"/>
                <ImageView android:id="@+id/icon_condition_more" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/scene_all_more_icon" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/icon_placehold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/scene_all_link_icon"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/action_ll" android:layout_width="wrap_content" android:layout_height="46dp"/>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/scene_new_more_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/scene_new_more_icon"/>
        </LinearLayout>
        <com.xiaomi.smarthome.library.common.widget.SwitchButton android:id="@+id/ckb_edit_selected" android:focusable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View android:id="@+id/divide_line" android:background="@color/divider_line_color" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="@dimen/scene_list_item_padding_left" android:layout_alignParentBottom="true" android:layout_marginStart="@dimen/scene_list_item_padding_left"/>
    <View android:id="@+id/divide_line_bottom" android:background="@color/divider_line_color" android:visibility="gone" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
</RelativeLayout>
