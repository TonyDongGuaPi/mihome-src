<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:PtrHeader="http://schemas.android.com/apk/PtrHeader" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customPullDownRefreshLL="http://schemas.android.com/apk/res/com.xiaomi.smarthome" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/progress_layout" android:layout_width="match_parent" android:layout_height="match_parent">
        <ProgressBar android:id="@+id/progress_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminateOnly="true"/>
        <TextView android:id="@+id/progress_summary" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/mibi_progress_downloading"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/error_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="@dimen/mibi_web_error_logo_marginTop">
        <ImageView android:id="@+id/warning_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mibi_content_empty_icon_light"/>
        <TextView android:textSize="@dimen/mibi_text_size_small" android:textColor="@color/mibi_text_color_gray" android:id="@+id/error" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Button android:id="@+id/button_retry" android:background="@drawable/mibi_retry_button_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:minWidth="@dimen/mibi_min_limited_button_width" android:text="@string/mibi_btn_net_connection_retry" style="@style/Mibi.Widget.Button"/>
    </LinearLayout>
</merge>
