<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:PtrHeader="http://schemas.android.com/apk/PtrHeader" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customPullDownRefreshLL="http://schemas.android.com/apk/res/com.xiaomi.smarthome" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/xrefreshview_header_text" android:background="@android:color/white" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="70dp">
    <RelativeLayout android:id="@+id/left_images" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="50dp" android:layout_centerVertical="true">
        <ImageView android:id="@+id/xrefreshview_header_arrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/xrefreshview_arrow"/>
        <ProgressBar android:id="@+id/xrefreshview_header_progressbar" android:visibility="gone" android:layout_width="40dp" android:layout_height="40dp"/>
    </RelativeLayout>
    <ImageView android:id="@+id/xrefreshview_header_ok" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:src="@drawable/xrefresh_ok" android:layout_toLeftOf="@+id/right_text" android:layout_centerVertical="true"/>
    <RelativeLayout android:id="@+id/right_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <TextView android:id="@+id/xrefreshview_header_hint_textview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/xrefreshview_header_hint_normal"/>
        <TextView android:textSize="12sp" android:id="@+id/xrefreshview_header_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/xrefreshview_never_refresh" android:layout_below="@+id/xrefreshview_header_hint_textview"/>
    </RelativeLayout>
</RelativeLayout>
