<?xml version="1.0" encoding="utf-8"?>
<com.xiaomi.smarthome.library.common.widget.ListItemView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:PtrHeader="http://schemas.android.com/apk/PtrHeader" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:id="@+id/root" android:background="@drawable/selector_list_item_v2" android:layout_width="match_parent" android:layout_height="@dimen/std_list_height_device_icon">
    <RelativeLayout android:id="@+id/rl_edit" android:layout_width="match_parent" android:layout_height="66dp">
        <CheckBox android:id="@+id/ckb_edit_selected" android:background="@drawable/list_icon_selector" android:focusable="false" android:visibility="gone" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:button="@null" android:layout_centerVertical="true" android:layout_marginStart="16dp"/>
        <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/image" android:layout_width="56dp" android:layout_height="56dp" android:layout_marginLeft="7dp" android:src="@drawable/device_list_phone_no" android:layout_toRightOf="@+id/ckb_edit_selected" android:layout_centerVertical="true" android:layout_marginStart="7dp" android:layout_toEndOf="@+id/ckb_edit_selected"/>
        <ImageView android:id="@+id/image_offline" android:background="@drawable/tag_offline" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignRight="@+id/image" android:layout_alignBottom="@+id/image"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_toLeftOf="@+id/right_content" android:layout_toRightOf="@+id/image" android:layout_centerVertical="true" android:layout_marginStart="5dp" android:layout_toStartOf="@+id/right_content" android:layout_toEndOf="@+id/image">
            <TextView android:textSize="15sp" android:textColor="@color/class_V" android:ellipsize="end" android:gravity="left" android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/smarthome_device_common_device" android:singleLine="true" android:includeFontPadding="false" android:drawablePadding="5dp"/>
            <View android:layout_width="wrap_content" android:layout_height="2dp"/>
            <TextView android:textSize="12sp" android:textColor="#999999" android:ellipsize="end" android:gravity="left" android:id="@+id/name_status" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="0dp" android:text="@string/closed" android:singleLine="true" android:includeFontPadding="false"/>
        </LinearLayout>
        <RelativeLayout android:id="@+id/right_content" android:layout_width="75dp" android:layout_height="match_parent" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true">
            <FrameLayout android:id="@+id/device_switch_layout" android:visibility="gone" android:clickable="true" android:layout_width="75dp" android:layout_height="match_parent" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true">
                <com.xiaomi.smarthome.library.common.widget.SwitchButton android:layout_gravity="center" android:id="@+id/device_switch" android:paddingTop="10dp" android:paddingBottom="10dp" android:focusable="false" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </FrameLayout>
            <FrameLayout android:id="@+id/status_layout" android:layout_width="75dp" android:layout_height="match_parent" android:layout_marginRight="15dp" android:layout_toLeftOf="@+id/device_switch_layout" android:layout_marginEnd="15dp" android:layout_toStartOf="@+id/device_switch_layout">
                <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/device_status_img" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <TextView android:textSize="@dimen/font_size_6" android:textColor="@color/black_70_transparent" android:gravity="center_vertical" android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/add_sub_device" android:background="@drawable/list_item_gray_btn_selector" android:paddingLeft="7dp" android:paddingRight="7dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/miio_device_list_add_device" android:paddingStart="7dp" android:paddingEnd="7dp"/>
                <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/sort_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_list_item_move" android:scaleType="center"/>
                <ProgressBar android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/device_progress_bar" android:visibility="gone" android:layout_width="30dp" android:layout_height="30dp" android:indeterminate="true" style="@style/page_circle_loading_progress"/>
                <include android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:visibility="gone" android:layout_width="30dp" android:layout_height="30dp" layout="@layout/client_all_item_loading_icon"/>
                <ViewStub android:layout_gravity="right|center_vertical|center_horizontal|center|end" android:id="@+id/plugin_container_stub" android:layout="@layout/plugin_progress_container" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </FrameLayout>
        </RelativeLayout>
    </RelativeLayout>
    <View android:id="@+id/divider" android:background="#e5e5e5" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="13dp" android:layout_alignParentBottom="true"/>
</com.xiaomi.smarthome.library.common.widget.ListItemView>
