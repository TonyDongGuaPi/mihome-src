<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:PtrHeader="http://schemas.android.com/apk/PtrHeader" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customPullDownRefreshLL="http://schemas.android.com/apk/res/com.xiaomi.smarthome" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/font_size_24sp" android:textColor="@color/class_V" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="60dp" android:layout_marginBottom="60dp" android:text="@string/login_choose_hint"/>
        <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/login_choose_profile" android:layout_width="80dp" android:layout_height="80dp" android:src="@drawable/default_icon_user240_nor" android:scaleType="fitXY"/>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp">
            <TextView android:textSize="@dimen/font_size_13sp" android:textColor="#666666" android:id="@+id/login_choose_username" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/login_choose_username"/>
            <TextView android:textSize="@dimen/font_size_13sp" android:textColor="#666666" android:id="@+id/login_choose_phone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/login_choose_phone" android:layout_below="@+id/login_choose_username" android:layout_alignParentLeft="@+id/login_choose_username" android:layout_alignParentStart="@+id/login_choose_username"/>
        </RelativeLayout>
        <TextView android:textSize="13sp" android:gravity="center" android:id="@+id/login_choose_sure" android:layout_width="match_parent" android:layout_height="42dp" android:layout_marginLeft="24dp" android:layout_marginTop="54dp" android:layout_marginRight="24dp" android:text="@string/login_choose_sure" style="@style/ConfirmNormalBtn"/>
        <TextView android:textSize="13sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/login_choose_new" android:layout_width="match_parent" android:layout_height="42dp" android:layout_marginLeft="24dp" android:layout_marginTop="20dp" android:layout_marginRight="24dp" android:text="@string/login_choose_not" style="@style/ConfirmNormalBtn"/>
    </LinearLayout>
</ScrollView>
