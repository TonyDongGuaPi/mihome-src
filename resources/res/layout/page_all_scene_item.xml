<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:PtrHeader="http://schemas.android.com/apk/PtrHeader" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customPullDownRefreshLL="http://schemas.android.com/apk/res/com.xiaomi.smarthome" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/scene_all_true_item" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.xiaomi.smarthome.library.common.widget.ListItemView android:background="@drawable/choose_device_list_item_last_position_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
            <FrameLayout android:id="@+id/scene_right_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/std_list_content_margin_right" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                <TextView android:textSize="@dimen/font_size_12sp" android:textColor="#0bb58b" android:gravity="center" android:id="@+id/right_view_btn" android:background="@drawable/scene_execute_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/scene2_to_execute" android:lines="1"/>
                <ImageView android:id="@+id/right_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/scene_right_arrow"/>
                <com.xiaomi.smarthome.library.common.widget.SwitchButton android:id="@+id/open_check" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <CheckBox android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/ckb_edit_selected" android:focusable="false" android:visibility="invisible" android:clickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@drawable/checkbox_layout"/>
            </FrameLayout>
            <LinearLayout android:orientation="vertical" android:paddingTop="10dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="29dp" android:layout_toLeftOf="@+id/scene_right_container" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
                <TextView android:textSize="@dimen/font_size_14sp" android:textColor="@color/black_80_transparent" android:id="@+id/tv_scene_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/scene2_gohome" android:singleLine="true"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="6dp" android:weightSum="1">
                    <RelativeLayout android:layout_width="56dp" android:layout_height="56dp">
                        <com.facebook.drawee.view.SimpleDraweeView android:id="@+id/icon_condition" android:layout_width="56dp" android:layout_height="56dp"/>
                        <ImageView android:id="@+id/icon_condition_more" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/scene_all_more_icon" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                    <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/scene_all_link_icon"/>
                    <LinearLayout android:orientation="horizontal" android:id="@+id/action_ll" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <ImageView android:layout_gravity="center_vertical" android:id="@+id/scene_new_more_icon" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/scene_new_more_icon"/>
                </LinearLayout>
                <TextView android:textSize="@dimen/font_size_12sp" android:textColor="@color/black_50_transparent" android:id="@+id/tv_scene_execute_info" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/txt_padding_4" android:text="@string/scene2_executed" android:layout_toRightOf="@+id/iv_scene_icon" android:layout_below="@+id/tv_scene_name" android:layout_alignLeft="@+id/tv_scene_name"/>
            </LinearLayout>
            <View android:background="@color/divider_line_color" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
        </com.xiaomi.smarthome.library.common.widget.ListItemView>
    </LinearLayout>
</LinearLayout>
