<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:PtrHeader="http://schemas.android.com/apk/PtrHeader" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customPullDownRefreshLL="http://schemas.android.com/apk/res/com.xiaomi.smarthome" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/control_card_bg" android:layout_width="246dp" android:layout_height="350dp" android:layout_centerInParent="true">
    <LinearLayout android:orientation="vertical" android:id="@+id/card_head" android:background="#00ffffff" android:layout_width="match_parent" android:layout_height="70dp">
        <TextView android:textSize="@dimen/font_size_17sp" android:textColor="@color/class_V" android:ellipsize="end" android:gravity="center" android:id="@+id/device_name" android:layout_width="match_parent" android:layout_height="70dp" android:layout_marginLeft="13dp" android:layout_marginRight="13dp" android:singleLine="true"/>
        <RelativeLayout android:orientation="vertical" android:id="@+id/off_line_head" android:visibility="gone" android:layout_width="match_parent" android:layout_height="70dp">
            <TextView android:textSize="@dimen/font_size_17sp" android:textColor="#dadada" android:ellipsize="end" android:gravity="center" android:id="@+id/off_line_device_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:layout_marginTop="14dp" android:layout_marginRight="13dp" android:singleLine="true" android:layout_centerHorizontal="true"/>
            <TextView android:textSize="@dimen/font_size_12sp" android:textColor="#dadada" android:id="@+id/off_line_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="14dp" android:text="@string/card_device_off_line" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>
    <View android:id="@+id/device_name_divider" android:background="@color/card_divider" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/card_head"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/card_item_parent" android:layout_width="match_parent" android:layout_height="228dp" android:layout_below="@+id/device_name_divider" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
    <View android:id="@+id/card_mask" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="228dp" android:layout_below="@+id/device_name_divider" android:alpha="0.8"/>
    <View android:id="@+id/enter_device_divider" android:background="@color/card_divider" android:layout_width="match_parent" android:layout_height="1px" android:layout_above="@+id/enter_device_layout"/>
    <FrameLayout android:gravity="center" android:id="@+id/enter_device_layout" android:layout_width="match_parent" android:layout_height="52dp" android:layout_alignParentBottom="true">
        <com.xiaomi.smarthome.newui.widget.DownloadProgressBar android:gravity="center" android:id="@+id/enter_device_bt" android:layout_width="match_parent" android:layout_height="52dp" android:layout_alignParentBottom="true" style="@style/Widget.ProgressBar.Horizontal"/>
        <ProgressBar android:layout_gravity="center" android:id="@+id/progress_enter_device" android:visibility="invisible" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="60dp" android:indeterminateOnly="true" android:indeterminateDrawable="@drawable/update_circle_loading_progress"/>
    </FrameLayout>
</RelativeLayout>
