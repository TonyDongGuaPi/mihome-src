<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:PtrHeader="http://schemas.android.com/apk/PtrHeader" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customPullDownRefreshLL="http://schemas.android.com/apk/res/com.xiaomi.smarthome" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:background="@drawable/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="27dp">
        <FrameLayout android:layout_gravity="center" android:layout_width="260dp" android:layout_height="260dp">
            <ImageView android:layout_gravity="center" android:id="@+id/iv_wap_work_bg" android:visibility="gone" android:layout_width="260dp" android:layout_height="260dp" android:src="@drawable/smartgroup_ap_work_bg" android:scaleType="center"/>
            <ImageView android:layout_gravity="center" android:id="@+id/iv_wap_work" android:layout_width="260dp" android:layout_height="260dp" android:src="@drawable/smartgroup_wp_work" android:scaleType="center"/>
        </FrameLayout>
        <View android:background="#22000000" android:layout_width="match_parent" android:layout_height="0.3dp" android:layout_marginLeft="30dp" android:layout_marginTop="27dp" android:layout_marginRight="30dp" android:layout_marginStart="30dp" android:layout_marginEnd="30dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="27dp">
        <TextView android:textSize="11sp" android:textColor="#ffffff" android:layout_gravity="center_horizontal" android:id="@+id/tv_address" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="43dp" android:text="@string/smartgroup_default_address" android:drawableLeft="@drawable/smartgroup_address_white" android:drawablePadding="3dp" android:drawableStart="@drawable/smartgroup_address_white"/>
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="31dp">
            <LinearLayout android:layout_gravity="right" android:orientation="vertical" android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:textAlignment="gravity" android:layout_marginEnd="10dp">
                <TextView android:textSize="@dimen/font_size_11sp" android:textColor="@color/white" android:layout_gravity="right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/smartgroup_aqi_title"/>
                <TextView android:textSize="@dimen/font_size_11sp" android:textColor="@color/white" android:layout_gravity="right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="（AQI）"/>
                <TextView android:textSize="30dp" android:textColor="@color/white" android:layout_gravity="right" android:id="@+id/local_aqi_value_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp"/>
            </LinearLayout>
            <View android:background="@color/white_30_transparent" android:layout_width="1dp" android:layout_height="match_parent" android:layout_marginTop="3dp" android:layout_marginBottom="7dp"/>
            <LinearLayout android:layout_gravity="left" android:orientation="vertical" android:layout_width="120dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:textAlignment="gravity" android:layout_marginStart="10dp">
                <TextView android:textSize="@dimen/font_size_11sp" android:textColor="@color/white" android:layout_gravity="left" android:id="@+id/tv_wap_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/smartgroup_aqi_io_title" android:textAlignment="gravity"/>
                <TextView android:textSize="@dimen/font_size_11sp" android:textColor="@color/white" android:layout_gravity="left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="（PM2.5）" android:textAlignment="gravity"/>
                <LinearLayout android:layout_gravity="left" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:textAlignment="gravity">
                    <TextView android:textSize="30dp" android:textColor="@color/white" android:layout_gravity="center_vertical" android:id="@+id/tv_wp_data_max" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:textSize="30dp" android:textColor="@color/white" android:layout_gravity="center_vertical" android:id="@+id/local_temperature_center_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="/"/>
                    <TextView android:textSize="30dp" android:textColor="@color/white" android:layout_gravity="center_vertical" android:id="@+id/tv_wp_data_min" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView android:textSize="10sp" android:textColor="#ddffffff" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_data_source" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:lineSpacingExtra="4dp"/>
    </LinearLayout>
</FrameLayout>
