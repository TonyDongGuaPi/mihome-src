<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:PtrHeader="http://schemas.android.com/apk/PtrHeader" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customPullDownRefreshLL="http://schemas.android.com/apk/res/com.xiaomi.smarthome" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:background="#f2f2f2" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.xiaomi.dragdrop.CubeView android:id="@+id/cubeview" android:padding="0dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:background="#ffffff" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:id="@+id/layout_info" android:clickable="true" android:layout_width="match_parent" android:layout_height="81dp">
                <ImageView android:layout_gravity="center" android:id="@+id/info_online_icon" android:visibility="gone" android:layout_width="56dp" android:layout_height="56dp" android:src="@drawable/geek_icon_online" android:scaleType="fitXY" android:layout_centerInParent="true"/>
                <TextView android:textSize="30sp" android:textColor="@color/lite_device_name_open" android:layout_gravity="center" android:id="@+id/info_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:lines="1" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
                <TextView android:textSize="10sp" android:textColor="@color/lite_device_name_open" android:ellipsize="end" android:gravity="center" android:id="@+id/info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:lines="1" android:layout_below="@+id/info_value" android:layout_centerHorizontal="true"/>
                <ImageView android:id="@+id/info_light" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4.7dp" android:src="@drawable/geek_light_open" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <View android:background="@drawable/lite_grid_inner_divider" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="6dp" android:layout_marginRight="6dp"/>
            <TextView android:textSize="11sp" android:textColor="@color/lite_device_name_close" android:ellipsize="end" android:gravity="center" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/info_name" android:background="@drawable/common_list_selector" android:clickable="true" android:layout_width="match_parent" android:layout_height="34dp" android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content">
            <FrameLayout android:id="@+id/layout_icon" android:clickable="true" android:addStatesFromChildren="true" android:layout_width="match_parent" android:layout_height="81dp">
                <com.facebook.drawee.view.SimpleDraweeView android:layout_gravity="center" android:id="@+id/icon" android:layout_width="56dp" android:layout_height="56dp" app:actualImageScaleType="0"/>
                <ImageView android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/icon_light" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="4.7dp" android:src="@drawable/geek_light_open"/>
            </FrameLayout>
            <View android:background="@drawable/lite_grid_inner_divider" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="6dp" android:layout_marginRight="6dp"/>
            <TextView android:textSize="11sp" android:textColor="@color/lite_device_name_close" android:ellipsize="end" android:gravity="center" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/name" android:background="@drawable/common_list_selector" android:clickable="true" android:layout_width="match_parent" android:layout_height="34dp" android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:singleLine="true"/>
        </LinearLayout>
    </com.xiaomi.dragdrop.CubeView>
</FrameLayout>
