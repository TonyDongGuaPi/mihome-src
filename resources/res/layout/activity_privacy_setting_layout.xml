<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/root" android:background="@color/std_main_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/title_bar" android:background="@drawable/common_title_bar_bg" android:layout_width="match_parent" android:layout_height="@dimen/std_titlebar_height">
        <com.xiaomi.smarthome.library.DarkImageViewCompat android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/module_a_3_return_btn" android:paddingLeft="@dimen/std_titlebar_margin_left_right" android:paddingRight="@dimen/std_titlebar_margin_left_right" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/common_title_bar_return" android:scaleType="center" android:contentDescription="@string/action_back"/>
        <TextView android:textSize="@dimen/std_title_bar_text_size" android:textColor="@color/std_titlebar_main_device_title" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/module_a_3_return_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/std_titlebar_return_area_size" android:layout_marginRight="@dimen/std_titlebar_return_area_size" android:maxLines="1"/>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/bottom_usr_exp_tip" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <TextView android:textSize="@dimen/font_size_14sp" android:textColor="#32bac0" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/usr_exp_plan_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginBottom="2dp" android:text="@string/usr_exp_plan"/>
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="15dp">
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/international_icon" android:visibility="gone" android:layout_width="14dp" android:layout_height="14dp" android:layout_marginRight="5dp" android:src="@drawable/international" android:scaleType="fitCenter" android:layout_marginEnd="5dp"/>
            <TextView android:textSize="@dimen/font_size_14sp" android:textColor="@color/class_text_11" android:layout_gravity="center_vertical" android:id="@+id/app_info" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView android:background="@color/std_main_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/bottom_usr_exp_tip" android:layout_below="@+id/title_bar">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <com.xiaomi.smarthome.library.common.widget.ListItemView android:id="@+id/join_usr_exp_plan_container" android:background="@drawable/common_white_list_padding_no_left_margin" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/std_list_item_height_single_line">
                <com.xiaomi.smarthome.library.common.widget.SwitchButton android:id="@+id/usr_exp_plan_switch" android:focusable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/std_list_content_margin_right" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/std_list_content_margin_right" android:layout_alignParentEnd="true"/>
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/usr_exp_plan_switch" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_toStartOf="@+id/usr_exp_plan_switch">
                    <TextView android:textSize="@dimen/std_list_font_size_title" android:textColor="@color/std_list_title" android:id="@+id/usr_exp_plan_container_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/privacy_setting_usr_exp_plan_title"/>
                    <TextView android:textSize="@dimen/std_list_font_size_subtitle" android:textColor="@color/std_list_subtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/privacy_setting_usr_exp_plan_subtitle"/>
                </LinearLayout>
                <View android:background="@color/std_list_divider_line" android:layout_width="match_parent" android:layout_height="1px" android:layout_alignParentBottom="true"/>
            </com.xiaomi.smarthome.library.common.widget.ListItemView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
