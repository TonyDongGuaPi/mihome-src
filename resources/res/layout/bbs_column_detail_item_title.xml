<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" style="@style/layoutLocal">
    <FrameLayout android:layout_width="match_parent" android:layout_height="212dp">
        <ImageView android:id="@+id/column_detail_top_bg" android:layout_width="match_parent" android:layout_height="212dp" android:scaleType="centerCrop"/>
        <RelativeLayout android:background="#80000000" android:layout_width="match_parent" android:layout_height="212dp">
            <com.mi.global.bbs.view.Editor.FontTextView android:textSize="20sp" android:textColor="@color/white" android:id="@+id/column_detail_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="70dp" android:singleLine="true" android:layout_centerHorizontal="true" android:textDirection="locale" android:layout_marginStart="16dp"/>
            <com.mi.global.bbs.view.Editor.FontTextView android:textSize="14sp" android:textColor="#c5c5c5" android:ellipsize="end" android:gravity="center" android:id="@+id/column_detail_description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:maxLines="3" android:layout_below="@+id/column_detail_title" android:layout_centerHorizontal="true" android:textDirection="locale" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
            <com.mi.global.bbs.view.Editor.FontTextView android:textSize="13sp" android:textColor="@color/main_yellow" android:gravity="center" android:id="@+id/column_detail_follower_bt" android:background="@drawable/follow_bt_bg" android:paddingTop="4dp" android:paddingBottom="5dp" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/add_follow" android:layout_below="@+id/column_detail_description" android:layout_centerHorizontal="true" android:textDirection="locale" android:paddingStart="10dp" android:paddingEnd="10dp"/>
            <ImageView android:id="@+id/column_detail_camera" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:src="@drawable/bbs_ic_action_camera" android:layout_alignParentBottom="true" android:layout_marginEnd="16dp" android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </FrameLayout>
    <RelativeLayout android:id="@+id/layout_column_detail_follower" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true">
        <TextView android:textSize="15sp" android:textColor="#000" android:id="@+id/tv_column_followers" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_alignParentTop="true" android:textDirection="locale" android:layout_marginStart="15dp" android:layout_alignParentStart="true"/>
        <LinearLayout android:gravity="start" android:orientation="horizontal" android:id="@+id/column_detail_follower_container" android:background="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/tv_column_followers"/>
        <ImageView android:id="@+id/column_detail_follower_more" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="22dp" android:src="@drawable/bbs_item_next_icon" android:layout_below="@+id/tv_column_followers" android:layout_marginEnd="16dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
