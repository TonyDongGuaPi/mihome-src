        <ImageView android:id="@+id/yp_new_share_poster_qrcode" android:layout_width="70dp" android:layout_height="70dp" android:scaleType="fitStart"/>
        <TextView android:textSize="10dp" android:textColor="@color/class_text_2" android:gravity="center_horizontal" android:id="@+id/textView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="长按识别二维码, 了解产品" android:includeFontPadding="false"/>
