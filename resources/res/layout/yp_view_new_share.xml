<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:PtrHeader="http://schemas.android.com/apk/PtrHeader" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customPullDownRefreshLL="http://schemas.android.com/apk/res/com.xiaomi.smarthome" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/yp_new_share_close" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginBottom="50dp" android:src="@drawable/yp_share_close" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    <LinearLayout android:id="@+id/yp_new_share_item_2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_marginBottom="40dp" android:layout_above="@+id/yp_new_share_close">
        <com.xiaomi.youpin.share.ui.CenterDrawableTextView android:id="@+id/yp_new_share_poster" android:text="@string/yp_share_generate_poster" android:drawableTop="@drawable/yp_share_poster" style="@style/ShareItem.Dark"/>
        <com.xiaomi.youpin.share.ui.CenterDrawableTextView android:id="@+id/yp_new_share_copyurl" android:text="@string/yp_share_copyurl" android:drawableTop="@drawable/yp_share_copy" style="@style/ShareItem.Dark"/>
        <com.xiaomi.youpin.share.ui.CenterDrawableTextView android:visibility="invisible" android:drawableTop="@drawable/yp_share_poster" style="@style/ShareItem.Dark"/>
        <com.xiaomi.youpin.share.ui.CenterDrawableTextView android:id="@+id/yp_new_share_placeholder" android:visibility="gone" android:drawableTop="@drawable/yp_share_poster" style="@style/ShareItem.Dark"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/yp_new_share_item" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_marginBottom="26dp" android:layout_above="@+id/yp_new_share_item_2">
        <com.xiaomi.youpin.share.ui.CenterDrawableTextView android:id="@+id/yp_new_share_wx_share" android:text="@string/yp_share_wechat" android:drawableTop="@drawable/yp_share_wechat" style="@style/ShareItem.Dark"/>
        <com.xiaomi.youpin.share.ui.CenterDrawableTextView android:id="@+id/yp_new_share_friends_share" android:text="@string/yp_share_wxcircle" android:drawableTop="@drawable/yp_share_pyq" style="@style/ShareItem.Dark"/>
        <com.xiaomi.youpin.share.ui.CenterDrawableTextView android:id="@+id/yp_new_share_weibo_share" android:text="@string/yp_share_sinaweibo" android:drawableTop="@drawable/yp_share_weibo" style="@style/ShareItem.Dark"/>
    </LinearLayout>
    <TextView android:textSize="@dimen/font_size_11sp" android:textColor="#99ffffff" android:id="@+id/yp_new_share_subtitle" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="30dp" android:text="每日首次分享有惊喜" android:layout_above="@+id/yp_new_share_item" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="16dp" android:textColor="@color/white" android:id="@+id/yp_new_share_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="分享给好友" android:layout_above="@+id/yp_new_share_subtitle" android:layout_centerHorizontal="true"/>
</merge>
