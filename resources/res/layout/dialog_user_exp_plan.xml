<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:PtrHeader="http://schemas.android.com/apk/PtrHeader" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customPullDownRefreshLL="http://schemas.android.com/apk/res/com.xiaomi.smarthome" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="@drawable/std_dialog_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/font_size_15sp" android:textColor="@color/class_V" android:gravity="center" android:layout_gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="52dp" android:text="@string/usr_exp_plan"/>
        <RelativeLayout android:id="@+id/usr_exp_plan_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginBottom="20dp" android:layout_marginStart="24dp">
            <TextView android:textSize="13sp" android:textColor="#8c000000" android:id="@+id/join_usr_exp_plan_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/disclaim_join_user_exp_plan" android:layout_toRightOf="@+id/remember" android:layout_centerVertical="true" android:layout_marginStart="5dp" android:layout_toEndOf="@+id/remember"/>
        </RelativeLayout>
        <View android:background="@color/std_list_divider_line" android:layout_width="match_parent" android:layout_height="1px"/>
        <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="52dp">
            <Button android:textSize="@dimen/font_size_15sp" android:textColor="@color/class_V" android:id="@+id/cancel" android:background="@drawable/dialog_btn_left_selector" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/cancel" android:layout_weight="1" android:textAllCaps="false"/>
            <View android:background="@color/std_list_divider_line" android:layout_width="1px" android:layout_height="match_parent"/>
            <Button android:textSize="@dimen/font_size_15sp" android:textColor="#32bac0" android:id="@+id/agree" android:background="@drawable/dialog_btn_right_selector" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/agree_go_on" android:layout_weight="1" android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
