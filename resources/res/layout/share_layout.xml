<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:PtrHeader="http://schemas.android.com/apk/PtrHeader" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customPullDownRefreshLL="http://schemas.android.com/apk/res/com.xiaomi.smarthome" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/class_A" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/module_a_3_title_bar_return"/>
    <RelativeLayout android:id="@+id/share_root" android:background="#ffffffff" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <com.xiaomi.smarthome.library.common.widget.SmartCircleView android:id="@+id/smart_score_circle" android:layout_width="200dp" android:layout_height="200dp" android:layout_marginTop="10dp" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="80sp" android:textColor="#ff717171" android:gravity="center" android:id="@+id/smart_score_center" android:layout_width="200dp" android:layout_height="200dp" android:layout_marginTop="10dp" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="20sp" android:textColor="#ff757575" android:id="@+id/smart_score" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_below="@+id/smart_score_circle" android:layout_alignLeft="@+id/smart_score_circle" android:layout_alignStart="@+id/smart_score_circle"/>
        <TextView android:textSize="20sp" android:textColor="#ff757575" android:id="@+id/exceed_score" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/smart_score" android:layout_alignLeft="@+id/smart_score" android:layout_alignStart="@+id/smart_score"/>
        <TextView android:textSize="16sp" android:textColor="#ffa0a0a0" android:id="@+id/safe_score_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_below="@+id/exceed_score" android:layout_alignLeft="@+id/exceed_score" android:layout_alignStart="@+id/exceed_score"/>
        <com.xiaomi.smarthome.library.common.widget.SmartBarView android:id="@+id/safe_score_bar" android:layout_width="90dp" android:layout_height="8dp" android:layout_marginLeft="15dp" android:layout_marginBottom="7dp" android:layout_toRightOf="@+id/safe_score_title" android:layout_alignBottom="@+id/safe_score_title" android:layout_marginStart="15dp" android:layout_toEndOf="@+id/safe_score_title"/>
        <TextView android:textSize="16sp" android:textColor="#ffa0a0a0" android:id="@+id/active_score_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/safe_score_title" android:layout_alignLeft="@+id/safe_score_title" android:layout_alignStart="@+id/safe_score_title"/>
        <com.xiaomi.smarthome.library.common.widget.SmartBarView android:id="@+id/active_score_bar" android:layout_width="90dp" android:layout_height="8dp" android:layout_marginBottom="7dp" android:layout_alignLeft="@+id/safe_score_bar" android:layout_alignBottom="@+id/active_score_title" android:layout_alignStart="@+id/safe_score_bar"/>
        <TextView android:textSize="16sp" android:textColor="#ffa0a0a0" android:id="@+id/sence_score_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_below="@+id/active_score_title" android:layout_alignLeft="@+id/active_score_title" android:layout_alignStart="@+id/active_score_title"/>
        <com.xiaomi.smarthome.library.common.widget.SmartBarView android:id="@+id/sence_score_bar" android:layout_width="90dp" android:layout_height="8dp" android:layout_marginBottom="7dp" android:layout_alignLeft="@+id/safe_score_bar" android:layout_alignBottom="@+id/sence_score_title" android:layout_alignStart="@+id/safe_score_bar"/>
    </RelativeLayout>
    <LinearLayout android:gravity="center" android:layout_gravity="center_horizontal" android:orientation="horizontal" android:background="#f8f8f8" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <ImageView android:id="@+id/miliao_share" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/miliao"/>
        <ImageView android:id="@+id/wx_share" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/weixin"/>
        <ImageView android:id="@+id/friends_share" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/pyq"/>
        <ImageView android:id="@+id/weibo_share" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/weibo"/>
        <ImageView android:id="@+id/qzone_share" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/qzone"/>
        <ImageView android:id="@+id/qq_share" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/qq"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
