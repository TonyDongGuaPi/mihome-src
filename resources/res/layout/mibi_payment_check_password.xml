<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:PtrHeader="http://schemas.android.com/apk/PtrHeader" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customPullDownRefreshLL="http://schemas.android.com/apk/res/com.xiaomi.smarthome" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Mibi.Payment.Dialog">
        <include android:id="@+id/layout_action_bar" layout="@layout/mibi_dialog_action_bar"/>
        <TextView android:textSize="@dimen/mibi_text_size_payment_general" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/mibi_payment_general_padding" android:layout_marginTop="27dp" android:layout_marginRight="@dimen/mibi_payment_general_padding" android:text="@string/mibi_password_prompt"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/password_info" android:background="@drawable/mibi_group_single_item_bg_light" android:paddingLeft="@dimen/mibi_payment_password_padding_left" android:paddingRight="@dimen/mibi_payment_password_padding_right" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/mibi_payment_general_padding" android:layout_marginTop="8dp" android:layout_marginRight="@dimen/mibi_payment_general_padding">
            <EditText android:textSize="@dimen/mibi_text_size_payment_small" android:id="@+id/password_edit" android:background="@null" android:layout_width="0dp" android:layout_height="match_parent" android:hint="@string/mibi_password_hint" android:layout_weight="1" android:inputType="textPassword"/>
            <TextView android:textSize="@dimen/mibi_text_size_payment_general" android:textColor="@color/mibi_text_color_payment_red" android:id="@+id/password_forget" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:text="@string/mibi_password_forget"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/mibi_text_size_payment_general" android:textColor="@color/mibi_text_color_payment_red" android:id="@+id/error_info" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/mibi_payment_general_padding" android:layout_marginTop="@dimen/mibi_payment_error_info_margin_top" android:layout_marginRight="@dimen/mibi_payment_general_padding"/>
        <com.mibi.common.component.ProgressButton android:id="@+id/button_pay" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/mibi_button_confirm" style="@style/Mibi.Widget.Button.Dialog"/>
    </LinearLayout>
</FrameLayout>
