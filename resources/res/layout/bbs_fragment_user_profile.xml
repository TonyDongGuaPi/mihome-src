        <com.mi.global.bbs.view.SimpleSymmetryTextView android:id="@+id/user_profile_city" android:paddingTop="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:textDirection="locale" app:leftText="@string/user_living_city"/>
