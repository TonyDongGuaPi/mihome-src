        <com.mi.global.bbs.view.SimpleSymmetryTextView android:id="@+id/user_profile_visit_time" android:paddingTop="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:textDirection="locale" app:leftText="@string/last_visit_time"/>
        <com.mi.global.bbs.view.SimpleSymmetryTextView android:id="@+id/user_profile_status" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:textDirection="locale" app:leftText="@string/status"/>
