<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:PtrHeader="http://schemas.android.com/apk/PtrHeader" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customPullDownRefreshLL="http://schemas.android.com/apk/res/com.xiaomi.smarthome" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true">
    <LinearLayout android:orientation="vertical" android:paddingLeft="@dimen/mibi_recharge_layout_padding_left" android:paddingTop="@dimen/mibi_recharge_layout_padding_top" android:paddingRight="@dimen/mibi_recharge_layout_padding_right" android:paddingBottom="@dimen/mibi_recharge_layout_padding_bottom" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:id="@+id/carriers_hint" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/mibi_prepaid_carriers_picker_hint" android:singleLine="true" style="@style/Mibi.TextAppearance.Hint"/>
        <com.xiaomi.payment.ui.component.CarrierGridView android:gravity="center_vertical" android:id="@+id/carriers" android:background="@drawable/mibi_grid_view_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mibi_recharge_layout_item_gap" android:numColumns="@integer/mibi_num_grid_columns"/>
        <TextView android:id="@+id/denomination_hint" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mibi_recharge_layout_group_gap" android:text="@string/mibi_recharge_grid_money_picker_hint" android:singleLine="true" style="@style/Mibi.TextAppearance.Hint"/>
        <com.xiaomi.payment.ui.component.DenominationGridView android:id="@+id/denomination" android:background="@drawable/mibi_grid_view_bg" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mibi_recharge_layout_item_gap" android:numColumns="@integer/mibi_num_grid_columns"/>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mibi_recharge_layout_group_gap">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/mibi_text_size_small" android:textColor="@color/mibi_text_color_gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="2dp" android:text="@string/mibi_prepaid_picker_hint_1_1"/>
                <TextView android:textSize="@dimen/mibi_text_size_small" android:textColor="@color/mibi_text_color_gray" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/mibi_prepaid_picker_hint_1_2"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/mibi_text_size_small" android:textColor="@color/mibi_text_color_gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="2dp" android:text="@string/mibi_prepaid_picker_hint_2_1"/>
                <TextView android:textSize="@dimen/mibi_text_size_small" android:textColor="@color/mibi_text_color_gray" android:id="@+id/prepaid_hint" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/mibi_prepaid_picker_hint_2_2_a"/>
            </LinearLayout>
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
        <TextView android:gravity="center" android:id="@+id/contentHint" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mibi_recharge_layout_group_gap" style="@style/Mibi.TextAppearance.Hint.Link"/>
        <Button android:id="@+id/button_next" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mibi_recharge_layout_group_gap" android:text="@string/mibi_btn_next" style="@style/Mibi.Widget.Button.Warning"/>
    </LinearLayout>
</ScrollView>
