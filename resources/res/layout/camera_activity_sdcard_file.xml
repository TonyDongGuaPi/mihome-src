<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/camera_white_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:id="@+id/title_bar" android:layout_width="match_parent" android:layout_height="@dimen/titlebar_height">
        <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/title_bar_return" android:paddingLeft="@dimen/std_titlebar_margin_left_right" android:paddingRight="@dimen/std_titlebar_margin_left_right" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/camera_tittlebar_back" android:scaleType="center"/>
            <TextView android:ellipsize="end" android:layout_gravity="center" android:id="@+id/title_bar_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/titlebar_return_area_size" android:layout_marginRight="@dimen/titlebar_return_area_size" android:maxLines="1" style="@style/std_word_001"/>
            <TextView android:textSize="@dimen/sub_title_bar_text_size" android:textColor="@color/sub_title_bar_text_color" android:ellipsize="end" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/sub_title_bar_title" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/titlebar_return_area_size" android:layout_marginRight="@dimen/titlebar_return_area_size" android:layout_marginBottom="@dimen/std_titlebar_sub_title_margin_bottom" android:maxLines="1"/>
            <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/title_bar_more" android:paddingLeft="@dimen/std_titlebar_margin_left_right" android:paddingRight="@dimen/std_titlebar_margin_left_right" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/camera_tittlebar_main_more" android:scaleType="center"/>
            <ImageView android:layout_gravity="top|right|center_vertical|center_horizontal|center" android:id="@+id/title_bar_redpoint" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/std_titlebar_redpoint_margin_top" android:layout_marginRight="@dimen/std_titlebar_redpoint_margin_right" android:src="@drawable/camera_tittlebar_massage_point" android:scaleType="center"/>
            <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/title_bar_share" android:paddingLeft="@dimen/std_titlebar_margin_left_right" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="56dp" android:src="@drawable/camera_tittlebar_share" android:scaleType="center"/>
        </FrameLayout>
        <FrameLayout android:id="@+id/select_all_title_bar" android:background="@color/camera_white_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/titlebar_height">
            <ImageView android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/ivSelectAllCancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="14dp" android:src="@drawable/camera_tittlebar_back"/>
            <TextView android:textSize="@dimen/title_bar_text_size" android:textColor="@color/title_bar_text_color" android:ellipsize="end" android:layout_gravity="center" android:id="@+id/select_all_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/titlebar_return_area_size" android:layout_marginRight="@dimen/titlebar_return_area_size" android:lines="1"/>
            <ImageView android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/ivSelectAll" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="14dp" android:src="@drawable/camera_edit_select_all_black"/>
        </FrameLayout>
    </FrameLayout>
    <View android:background="@drawable/camera_common_bg_title_divider" android:layout_width="match_parent" android:layout_height="1px"/>
    <FrameLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <ListView android:id="@+id/list_view" android:visibility="gone" android:scrollbars="vertical" android:layoutAnimation="@null" android:layout_width="match_parent" android:layout_height="match_parent" android:cacheColorHint="@null" android:divider="@null" android:footerDividersEnabled="false" android:overScrollMode="ifContentScrolls"/>
        <include android:visibility="visible" layout="@layout/camera_list_empty_view"/>
    </FrameLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/layout_select_bottom" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="67dp">
        <View android:background="#bfbfc0" android:layout_width="match_parent" android:layout_height="1px"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="10sp" android:textColor="#000000" android:gravity="center_horizontal" android:id="@+id/select_save" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/camera_bottom_item_margin" android:layout_marginRight="@dimen/camera_bottom_item_margin" android:text="@string/main_save" android:drawableTop="@drawable/camera_icon_save"/>
            <TextView android:textSize="10sp" android:textColor="#000000" android:gravity="center_horizontal" android:id="@+id/select_delete" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/camera_bottom_item_margin" android:layout_marginRight="@dimen/camera_bottom_item_margin" android:text="@string/local_file_delete" android:drawableTop="@drawable/camera_icon_delete"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
