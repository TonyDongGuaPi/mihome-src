<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:PtrHeader="http://schemas.android.com/apk/PtrHeader" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customPullDownRefreshLL="http://schemas.android.com/apk/res/com.xiaomi.smarthome" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="bottom" android:orientation="vertical" android:background="@color/black_40_transparent" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/ll_btn_record_bg" android:background="@color/white" android:layout_width="match_parent" android:layout_height="225dp">
        <TableRow android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="40dp">
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/tr_left_anim" android:visibility="gone" android:layout_width="45dp" android:layout_height="13dp" android:layout_marginRight="20dp" android:divider="@color/divider_line_color" android:showDividers="middle"/>
            <Chronometer android:textSize="19sp" android:textColor="#666666" android:id="@+id/chronometer_record" android:layout_width="wrap_content" android:layout_height="wrap_content" android:format="00:00"/>
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/tr_right_anim" android:visibility="gone" android:layout_width="45dp" android:layout_height="13dp" android:layout_marginLeft="20dp" android:divider="@color/divider_line_color" android:showDividers="middle"/>
        </TableRow>
        <TableRow android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="32dp" android:layout_marginBottom="32dp">
            <FrameLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="14sp" android:textColor="@color/black_50_transparent" android:layout_gravity="center" android:id="@+id/img_dismiss_pop" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cancel"/>
            </FrameLayout>
            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center" android:id="@+id/img_audio_state" android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/training_skill_start"/>
            </FrameLayout>
            <FrameLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <TextView android:textSize="14sp" android:textColor="@color/black_50_transparent" android:layout_gravity="center" android:id="@+id/img_upload_audio" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/common_finish"/>
            </FrameLayout>
        </TableRow>
    </LinearLayout>
</LinearLayout>
