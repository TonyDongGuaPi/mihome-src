<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:PtrHeader="http://schemas.android.com/apk/PtrHeader" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customPullDownRefreshLL="http://schemas.android.com/apk/res/com.xiaomi.smarthome" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:paddingBottom="@dimen/mibi_payment_success_framelayout_padding_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/Mibi.Payment.Dialog">
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mibi_payment_success_linearlayout_marging_top">
            <com.xiaomi.payment.ui.component.PaySuccessView android:id="@+id/icon_success" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mibi_payment_success_icon_marging_top"/>
            <TextView android:id="@+id/text_result_success" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mibi_payment_success_text_result_margin_top" style="@style/Mibi.TextAppearance.Payment.General.Gray"/>
            <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/mibi_payment_success_ad_view_marging_horizontal" android:layout_marginRight="@dimen/mibi_payment_success_ad_view_marging_horizontal">
                <ImageView android:id="@+id/mibi_payment_success_banner_view" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="@dimen/mibi_payment_success_banner_height" android:src="@null"/>
                <com.mibi.common.component.AutoCountDownButton android:id="@+id/auto_button_close" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mibi_payment_success_auto_count_button_marging_top" style="@style/Mibi.Widget.Button.Payment"/>
            </FrameLayout>
        </LinearLayout>
        <ImageView android:layout_gravity="top|right|center_vertical|center_horizontal|center" android:id="@+id/corner_button_close" android:background="@android:color/transparent" android:layout_width="@dimen/mibi_payment_success_corner_close_button_height_width" android:layout_height="@dimen/mibi_payment_success_corner_close_button_height_width" android:layout_marginTop="@dimen/mibi_payment_success_corner_close_button_margin" android:layout_marginRight="@dimen/mibi_payment_success_corner_close_button_margin" android:src="@drawable/mibi_counter_close" android:scaleType="fitCenter"/>
    </FrameLayout>
</FrameLayout>
