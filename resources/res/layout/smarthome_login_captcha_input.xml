<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:PtrHeader="http://schemas.android.com/apk/PtrHeader" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:customPullDownRefreshLL="http://schemas.android.com/apk/res/com.xiaomi.smarthome" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="23dp">
    <LinearLayout android:id="@+id/login_captcha_input_contanier" android:layout_width="match_parent" android:layout_height="40dp">
        <EditText android:ellipsize="end" android:id="@+id/login_captcha_input" android:background="@drawable/login_view_phone_login" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:maxLines="1" android:layout_weight="30" android:inputType="text" android:textCursorDrawable="@drawable/cursor"/>
        <ImageView android:id="@+id/login_captcha_img" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:src="@drawable/login_view_captcha_default" android:layout_weight="17"/>
    </LinearLayout>
    <TextView android:textSize="@dimen/font_size_12sp" android:textColor="#bb3624" android:id="@+id/login_captcha_error" android:paddingLeft="16dp" android:paddingTop="7dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="32dp" android:text="@string/login_captcha_error_hint" android:layout_below="@+id/login_captcha_input_contanier"/>
</RelativeLayout>
