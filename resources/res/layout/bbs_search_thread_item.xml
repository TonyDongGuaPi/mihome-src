<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/layoutLocal">
    <View android:id="@+id/top_divider" android:background="@color/common_bg_color" android:layout_width="match_parent" android:layout_height="10dp"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/thread_item_top" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.mi.global.bbs.view.Editor.FontTextView android:textSize="15sp" android:textColor="#666666" android:id="@+id/thread_item_top_total" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:textDirection="locale" android:paddingStart="15dp"/>
            <com.mi.global.bbs.view.Editor.FontTextView android:textSize="15sp" android:textColor="#666666" android:id="@+id/thread_item_top_order" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Order by latest reply" android:drawableEnd="@drawable/bbs_forum_category_more" android:textDirection="locale" android:paddingEnd="15dp"/>
        </LinearLayout>
        <View android:background="@color/divide_color" android:layout_width="match_parent" android:layout_height="0.5dp"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/thread_item" android:background="@drawable/white_gray_seletor" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.mi.global.bbs.view.Editor.FontTextView android:textSize="16sp" android:textColor="#333333" android:ellipsize="end" android:id="@+id/thread_item_title" android:paddingTop="17dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="2" android:textDirection="locale" android:paddingStart="15dp" android:paddingEnd="15dp"/>
        <ImageView android:id="@+id/qa_search_answered" android:background="@drawable/bbs_qa_search_answered" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="28dp" android:layout_marginEnd="18dp" android:layout_alignParentEnd="true"/>
        <com.mi.global.bbs.view.Editor.FontTextView android:textSize="14sp" android:textColor="#999999" android:ellipsize="end" android:id="@+id/thread_item_des" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="3" android:layout_below="@+id/thread_item_title" android:textDirection="locale" android:paddingStart="15dp" android:paddingEnd="15dp"/>
        <LinearLayout android:orientation="horizontal" android:paddingTop="11dp" android:paddingBottom="17dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/thread_item_des" android:paddingStart="15dp" android:paddingEnd="15dp">
            <com.mi.global.bbs.view.Editor.FontTextView android:textSize="12sp" android:textColor="#333333" android:id="@+id/thread_item_au" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textDirection="locale"/>
            <com.mi.global.bbs.view.Editor.FontTextView android:textSize="13sp" android:textColor="#c4c4c4" android:ellipsize="end" android:id="@+id/thread_item_time" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1" android:textDirection="locale"/>
            <com.mi.global.bbs.view.Editor.FontTextView android:textSize="13sp" android:textColor="#c4c4c4" android:id="@+id/thread_item_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawablePadding="10dp" android:drawableStart="@drawable/bbs_ic_view_count" android:textDirection="locale"/>
            <com.mi.global.bbs.view.Editor.FontTextView android:textSize="13sp" android:textColor="#c4c4c4" android:id="@+id/thread_item_comment" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawablePadding="10dp" android:drawableStart="@drawable/bbs_f_comment_icon" android:textDirection="locale" android:paddingStart="15dp"/>
        </LinearLayout>
    </RelativeLayout>
    <View android:background="@color/common_bg_color" android:layout_width="match_parent" android:layout_height="10dp"/>
</LinearLayout>
