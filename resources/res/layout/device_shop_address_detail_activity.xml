            <ImageView android:gravity="center_vertical" android:id="@+id/load_content" android:layout_width="wrap_content" android:layout_height="match_parent" android:src="@drawable/device_shop_user_icon" android:scaleType="center"/>
        </LinearLayout>
        <View android:background="@color/class_Z" android:layout_width="match_parent" android:layout_height="0.3dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="54dp">
            <TextView android:textSize="@dimen/font_size_4" android:textColor="@color/class_B" android:gravity="center_vertical" android:layout_width="100dp" android:layout_height="match_parent" android:text="@string/device_shop_address_tel"/>
            <EditText android:textSize="@dimen/font_size_4" android:textColor="@color/class_Y" android:gravity="center_vertical" android:id="@+id/addr_tel" android:background="@null" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_weight="1" android:inputType="number" android:layout_marginStart="10dp"/>
        </LinearLayout>
        <View android:background="@color/class_Z" android:layout_width="match_parent" android:layout_height="0.3dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="54dp">
            <TextView android:textSize="@dimen/font_size_4" android:textColor="@color/class_B" android:gravity="center_vertical" android:layout_width="100dp" android:layout_height="match_parent" android:text="@string/device_shop_address_district"/>
            <TextView android:textSize="@dimen/font_size_4" android:textColor="@color/class_Y" android:textColorHint="@color/class_M" android:gravity="center_vertical" android:id="@+id/addr_district" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_weight="1" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
