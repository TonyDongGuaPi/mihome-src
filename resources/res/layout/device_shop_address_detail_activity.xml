        </LinearLayout>
        <View android:background="@color/class_Z" android:layout_width="match_parent" android:layout_height="0.3dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="80dp">
            <TextView android:textSize="@dimen/font_size_4" android:textColor="@color/class_B" android:gravity="center_vertical" android:layout_width="100dp" android:layout_height="match_parent" android:text="@string/device_shop_address_street"/>
            <EditText android:textSize="@dimen/font_size_4" android:textColor="@color/class_Y" android:gravity="center_vertical" android:id="@+id/addr_street" android:background="@null" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_weight="1" android:lineSpacingExtra="2dp" android:layout_marginStart="10dp"/>
        </LinearLayout>
        <View android:background="@color/class_Z" android:layout_width="match_parent" android:layout_height="0.3dp"/>
        <View android:background="@color/class_Z" android:layout_width="match_parent" android:layout_height="0.3dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="54dp">
            <TextView android:textSize="@dimen/font_size_4" android:textColor="@color/class_B" android:gravity="center_vertical" android:layout_width="100dp" android:layout_height="match_parent" android:text="@string/device_shop_address_zipcode"/>
