        <TextView android:textSize="@dimen/settings_item_title_text_size" android:textColor="@color/class_D" android:ellipsize="end" android:gravity="end" android:layout_gravity="center_vertical" android:id="@+id/module_a_3_return_title_left" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="1" android:layout_weight="1" android:layout_marginEnd="18dp"/>
