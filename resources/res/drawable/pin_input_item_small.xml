<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:dist="http://schemas.android.com/apk/distribution" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:miui="http://schemas.android.com/apk/res/miui" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_enabled="true" android:state_selected="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1px" android:color="#b8b8b8"/>
                    <solid android:color="@color/white"/>
                    <size android:height="39dp" android:width="39dp"/>
                </shape>
            </item>
            <item android:gravity="center" android:left="12.5dp" android:top="12.5dp" android:right="12.5dp" android:bottom="12.5dp">
                <shape android:shape="oval">
                    <solid android:color="#191919"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false" android:state_selected="false">
        <shape android:shape="rectangle">
            <stroke android:width="1px" android:color="#b8b8b8"/>
            <solid android:color="@color/white"/>
            <size android:height="39dp" android:width="39dp"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1px" android:color="#00bc9c"/>
                    <solid android:color="@color/white"/>
                    <size android:height="39dp" android:width="39dp"/>
                </shape>
            </item>
            <item android:gravity="center" android:left="18.5dp" android:top="3.5dp" android:right="18.5dp" android:bottom="3.5dp">
                <shape android:shape="rectangle">
                    <solid android:color="#00bc9c"/>
                    <stroke android:color="#00bc9c"/>
                    <size android:height="32dp" android:width="2dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false" android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke android:width="1px" android:color="#00bc9c"/>
            <solid android:color="@color/white"/>
            <size android:height="39dp" android:width="39dp"/>
        </shape>
    </item>
</selector>
